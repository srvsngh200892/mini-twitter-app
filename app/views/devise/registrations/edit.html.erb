<div class="formContainer">
 <div class ="verticalCenter">
   <div class="col-xs-12 col-sm-offset-4 col-sm-4 loginForms">
    <h2>Change Password</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Confirm Password" ,class: "col-lg-12" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" ,class: "col-lg-12" %>
      <%= f.password_field :current_password, autocomplete: "off", placeholder: "Current Password" ,class: "col-lg-12" %>
      <%= f.submit "Change Password", class: 'col-lg-12' %>
    <% end %>
   </div>
 </div>
</div>